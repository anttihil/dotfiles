[include]
    path = ~/.config/private/git-user.conf

[core]
    pager = delta
    editor = vim

[init]
    defaultBranch = main

[pull]
    rebase = true

[merge]
    conflictStyle = zdiff3

[delta]
    navigate = true
    side-by-side = false
    line-numbers = true
    syntax-theme = gruvbox-dark

[alias]
    st = status
    co = checkout
    br = branch
    lg = log --oneline --graph --decorate
